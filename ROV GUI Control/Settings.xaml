<Window x:Class="ROV_GUI_Control.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ROV_GUI_Control"
        mc:Ignorable="d"
        Title="Settings" Height="600" Width="900" Background="#FF9DA8B1">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsButtonClicked}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                    To="Red" Duration="0:0:0.5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Height="600" HorizontalAlignment="Left" VerticalAlignment="Top">
        <GroupBox HorizontalAlignment="Left" Height="160" Header="Connect" Margin="10,10,0,0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="2">
            <Grid>
                <DockPanel Width="170" HorizontalAlignment="Left" VerticalAlignment="Top" Height="170">
                    <StackPanel Width="60" Height="140" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="IP Address" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.419,0.641" FontSize="9" FontFamily="Arial"/>
                        <Label Content="CAM1 Port" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial"/>
                        <Label Content="CAM2 Port" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial"/>
                        <Label Content="CAM3 Port" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial"/>
                        <Label Content="Joystick Port" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial"/>
                        <Label Content="Mavlink Port" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial"/>
                    </StackPanel>
                    <StackPanel Width="105" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <TextBox Text="{Binding IP, UpdateSourceTrigger=PropertyChanged}" Width="105" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding Cam1_Port, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding Cam2_Port, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding Cam3_Port, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding Joy_Port, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding Mav_Port, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>

                    </StackPanel>
                </DockPanel>
            </Grid>
        </GroupBox>
        <GroupBox HorizontalAlignment="Left" Height="190" Header="Speed PID" Margin="200,10,0,0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="2" BorderBrush="White">
            <Grid>
                <DockPanel Width="170" HorizontalAlignment="Left" VerticalAlignment="Top" Height="170">
                    <StackPanel Width="67" Height="140" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Kp" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="68" RenderTransformOrigin="0.419,0.641" FontSize="10" FontWeight="Bold"/>
                        <Label Content="Ki" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="68" FontSize="10" FontWeight="Bold"/>
                        <Label Content="Kd" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="68" FontSize="10" FontWeight="Bold"/>
                        <Label Content="MAX Output" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="68" FontSize="10" FontWeight="Bold"/>
                        <Label Content="MIN Output" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="68" FontSize="10" Margin="0,3,0,0" FontWeight="Bold"/>
                        <Label Content="Anti windup" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="68" FontSize="10" FontWeight="Bold"/>
                    </StackPanel>
                    <StackPanel Width="105" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <TextBox Text="{Binding PID[SKP].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[SKI].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[SKD].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[SMAX].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[SMIN].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[SANTI].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                    </StackPanel>
                </DockPanel>
                <Button  HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="60" Height="20" Grid.Row="0" Content="Set" Command="{Binding ElementName=ROV3D, Path=Run}" Margin="0,0,0,5">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </GroupBox>
        <GroupBox HorizontalAlignment="Left" Height="190" Header="Depth-Roll PID" Margin="390,10,0,0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="2" BorderBrush="White" Foreground="Black">
            <Grid>
                <DockPanel Width="170" HorizontalAlignment="Left" VerticalAlignment="Top" Height="170">
                    <StackPanel Width="60" Height="140" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Kp" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.419,0.641" FontSize="9" FontFamily="Arial"/>
                        <Label Content="Ki" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial"/>
                        <Label Content="Kd" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial"/>
                        <Label Content="MAX Output" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,3,0,0" FontFamily="Arial"/>
                        <Label Content="MIN Output" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,3,0,0" FontFamily="Arial"/>
                        <Label Content="Anti windup" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,3,0,0" FontFamily="Arial"/>
                    </StackPanel>
                    <StackPanel Width="105" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <TextBox  Text="{Binding PID[RKP].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" TextAlignment="Center"></TextBox>
                        <TextBox  Text="{Binding PID[RKI].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox  Text="{Binding PID[RKD].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox  Text="{Binding PID[RMAX].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox  Text="{Binding PID[RMIN].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox  Text="{Binding PID[RANTI].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                    </StackPanel>
                </DockPanel>
                <Button  HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="60" Height="20" Grid.Row="0" Content="Set" Command="{Binding ElementName=ROV3D, Path=Run}" Margin="0,0,0,5">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </GroupBox>
        <GroupBox HorizontalAlignment="Left" Height="190" Header="Pitch PID" Margin="580,10,0,0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="2" BorderBrush="White">
            <Grid>
                <DockPanel Width="170" HorizontalAlignment="Left" VerticalAlignment="Top" Height="170">
                    <StackPanel Width="60" Height="140" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Kp" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.419,0.641" FontSize="9" FontFamily="Arial"/>
                        <Label Content="Ki" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial"/>
                        <Label Content="Kd" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial"/>
                        <Label Content="MAX Output" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,3,0,0" FontFamily="Arial"/>
                        <Label Content="MIN Output" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,3,0,0" FontFamily="Arial"/>
                        <Label Content="Anti windup" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,3,0,0" FontFamily="Arial"/>
                    </StackPanel>
                    <StackPanel Width="105" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <TextBox Text="{Binding PID[PKP].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[PKI].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[PKD].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[PMAX].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[PMIN].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[PANTI].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                    </StackPanel>
                </DockPanel>
                <Button  HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="60" Height="20" Grid.Row="0" Content="Set" Command="{Binding ElementName=ROV3D, Path=Run}" Margin="0,0,0,5">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </GroupBox>
        <GroupBox HorizontalAlignment="Left" Height="190" Header="Yaw PID" Margin="10,210,0,0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="2" BorderBrush="White">
            <Grid>
                <DockPanel Width="170" HorizontalAlignment="Left" VerticalAlignment="Top" Height="170">
                    <StackPanel Width="60" Height="140" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Kp" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.419,0.641" FontSize="9" FontFamily="Arial"/>
                        <Label Content="Ki" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial"/>
                        <Label Content="Kd" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial"/>
                        <Label Content="MAX Output" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,3,0,0" FontFamily="Arial"/>
                        <Label Content="MIN Output" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,3,0,0" FontFamily="Arial"/>
                        <Label Content="Anti windup" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,3,0,0" FontFamily="Arial"/>
                    </StackPanel>
                    <StackPanel Width="105" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <TextBox Text="{Binding PID[YKP].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[YKI].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[YKD].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[YMAX].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[YMIN].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                        <TextBox Text="{Binding PID[YANTI].Value, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                    </StackPanel>
                </DockPanel>
                <Button  HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="60" Height="20" Grid.Row="0" Content="Set" Command="{Binding ElementName=ROV3D, Path=Run}" Margin="0,0,0,5">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </GroupBox>
        <Button Content="OK" Width="50" Margin="270,300,0,0" Command="{Binding OkCommand}" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button Content="Cancel" Width="50" Margin="327,300,0,0" Command="{Binding CancelCommand}" Height="20" HorizontalAlignment="Left"  VerticalAlignment="Top" />
    </Grid>
</Window>