<Window
    xmlns:local="clr-namespace:ROV_GUI_Control"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:View="clr-namespace:ROV_GUI_Control.View"
    xmlns:converters="clr-namespace:ROV_GUI_Control.Converters"
    xmlns:h="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
    x:Class="ROV_GUI_Control.MainWindow"
    mc:Ignorable="d"
    Title="Assiut Robotics - ROV 2025" Height="788" Width="1386">
    <Window.Resources>
        <converters:BooleanToEnableDisableConverter x:Key="BooleanToEnableDisableConverter"/>
        <converters:StreamButtonConverter x:Key="StreamButtonConverter"/>
        <converters:LEDButtonConverter x:Key="LEDButtonConverter"/>
        <converters:LEDLightnessConverter x:Key="LEDLightnessConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:FloatConverter x:Key="FloatConverter"/>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsButtonClicked}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="Red" Duration="0:0:0.5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="788" Margin="0" VerticalAlignment="Top" Width="1386">
            <TabItem Header="Main" Height="22" VerticalAlignment="Top" FontWeight="Bold">
                <Grid Background="#FF25282D" Width="1385" Height="788" Margin="0,0,-5,0" HorizontalAlignment="Left" VerticalAlignment="Top">

                    <Border CornerRadius="10" Width="768" Height="432" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0" Background="#FF303036">
                        <Grid>
                            <Image x:Name="Feed1" Source="{Binding Image1}" Width="764" Height="428 " Stretch="Fill">
                                <Image.Clip>
                                    <RectangleGeometry Rect="0,0,764,428" RadiusX="8" RadiusY="8"/>
                                </Image.Clip>
                            </Image>
                        </Grid>
                    </Border>
                    <Border CornerRadius="10" Width="300" Height="190" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Background="#FF303036">
                        <Grid>
                            <Image x:Name="Feed2" Source="{Binding Image2}" Width="296" Height="186 " Stretch="Fill">
                                <Image.Clip>
                                    <RectangleGeometry Rect="0,0,296,186" RadiusX="8" RadiusY="8"/>
                                </Image.Clip>
                            </Image>
                        </Grid>
                    </Border>
                    <Border CornerRadius="10" Width="300" Height="190" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,10,0,0" Background="#FF303036">
                        <Grid>
                            <Image x:Name="Feed3" Source="{Binding Image3}" Width="296" Height="186 " Stretch="Fill">
                                <Image.Clip>
                                    <RectangleGeometry Rect="0,0,296,186" RadiusX="8" RadiusY="8"/>
                                </Image.Clip>
                            </Image>
                        </Grid>
                    </Border>
                    <Label Content="Feed 3" Height="30" Margin="320,10,999,0" Width="66" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    <Border CornerRadius="10,10,10,10" Background="#FF303036"  Margin="788,10,0,0" Height="190" Width="562.5" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <Grid>
                            <View:DepthGauge x:Name="Depth" DepthValue ="{Binding Depth}" HorizontalAlignment="Right" Margin="0,0,5,0" Width="180" Height="180" TextOptions.TextHintingMode="Animated"/>
                            <View:Gauge x:Name="Speed" Value="{Binding Speedgauge.Speed_Value}" HorizontalAlignment="Center" Margin="0" Height="180" Width="180"/>
                            <View:Compass x:Name="Heading" CompValue="{Binding Compassgauge.Comp_Value}" HorizontalAlignment="Left" Height="180" Margin="5,0,0,0" Width="180"/>
                        </Grid>
                    </Border>
                    <Border CornerRadius="10,10,10,10" Background="#FF303036" Padding="5,5,0,0" Width="180" Height="170" Margin="788,210,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <DockPanel Height="165" Width="180" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <StackPanel HorizontalAlignment="Left" Orientation="Vertical" Width="115" DockPanel.Dock="Left" VerticalAlignment="Top" Height="165">
                                <Label Content="Water Temp (°C)" Height="17" Margin="0" Width="100" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="0" VerticalContentAlignment="Center"/>
                                <Label Content="Tube Temp (°C)" Height="17" Margin="0" Width="100" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="0" VerticalContentAlignment="Center"/>
                                <Label Content="Water Pressure (Pa)" HorizontalAlignment="Left" Height="17" Margin="0" Width="115" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" Padding="0" VerticalContentAlignment="Center"/>
                                <Label Content="Tube Pressure (Pa)" HorizontalAlignment="Left" Height="17" Margin="0" Width="110" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" Padding="0" VerticalContentAlignment="Center"/>
                                <Label Content="Depth (m)" HorizontalAlignment="Left" Height="17" Margin="0" Width="66" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" VerticalContentAlignment="Center" Padding="0"/>
                                <Label Content="Speed (m/s)" HorizontalAlignment="Left" Height="17" Margin="0" Width="70" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" VerticalContentAlignment="Center" Padding="0"/>
                                <Label Content="Roll (°)" HorizontalAlignment="Left" Height="17" Margin="0" Width="70" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" VerticalContentAlignment="Center" Padding="0"/>
                                <Label Content="Pitch (°)" HorizontalAlignment="Left" Height="17" Margin="0" Width="70" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" VerticalContentAlignment="Center" Padding="0"/>
                                <Label Content="Yaw (°)" HorizontalAlignment="Left" Height="17" Margin="0" Width="70" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" VerticalContentAlignment="Center" Padding="0"/>


                            </StackPanel>
                            <StackPanel HorizontalAlignment="Left" Orientation="Vertical" Width="67" DockPanel.Dock="Right" VerticalAlignment="Top" Height="165">
                                <TextBox Text="{Binding CompValue}" Height="17" Margin="0,2,0,0" TextWrapping="Wrap" Width="55" Background="{x:Null}" Foreground="White" TextAlignment="Center" FontWeight="Bold" FontFamily="Arial" HorizontalContentAlignment="Center" BorderThickness="0" VerticalContentAlignment="Center" Padding="0"/>
                                <TextBox Text="{Binding Tube_Temp}" Height="17" Margin="0,1,0,0" TextWrapping="Wrap" Width="55" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontFamily="Arial" TextAlignment="Center" HorizontalContentAlignment="Center" BorderThickness="0" VerticalContentAlignment="Center" Padding="0"/>
                                <TextBox Text="{Binding Water_Press}" Height="17" Margin="0" TextWrapping="Wrap" Width="55" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontFamily="Arial" TextAlignment="Center" HorizontalContentAlignment="Center" BorderThickness="0" ClipToBounds="True" VerticalContentAlignment="Center" Padding="0"/>
                                <TextBox Text="{Binding Tube_Press}" Height="17" Margin="0" TextWrapping="Wrap" Width="55" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontFamily="Arial" TextAlignment="Center" HorizontalContentAlignment="Center" BorderThickness="0" VerticalContentAlignment="Center"/>
                                <TextBox Text="{Binding Depth}" Height="17" Margin="0" TextWrapping="Wrap" Width="55" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontFamily="Arial" TextAlignment="Center" HorizontalContentAlignment="Center" BorderThickness="0" ClipToBounds="True" VerticalContentAlignment="Center"/>
                                <TextBox Text="{Binding Speed}" Height="17" Margin="0" TextWrapping="Wrap" Width="55" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontFamily="Arial" TextAlignment="Center" HorizontalContentAlignment="Center" BorderThickness="0" ClipToBounds="True" VerticalContentAlignment="Center"/>
                                <TextBox Text="{Binding Roll }" Height="17" Margin="0" TextWrapping="Wrap" Width="55" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontFamily="Arial" TextAlignment="Center" HorizontalContentAlignment="Center" BorderThickness="0" VerticalContentAlignment="Center"/>
                                <TextBox Text="{Binding Pitch}" Height="17" Margin="0" TextWrapping="Wrap" Width="55" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontFamily="Arial" TextAlignment="Center" HorizontalContentAlignment="Center" BorderThickness="0" VerticalContentAlignment="Center"/>
                                <TextBox Text="{Binding Yaw}" Height="17" Margin="0" TextWrapping="Wrap" Width="55" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontFamily="Arial" TextAlignment="Center" HorizontalContentAlignment="Center" BorderThickness="0" VerticalContentAlignment="Center"/>

                            </StackPanel>
                        </DockPanel>
                    </Border>
                    <Border CornerRadius="10,10,10,10" Background="#FF303036" Padding="5" Margin="978,210,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="162" Height="170">
                        <Grid>
                            <View:Movement MoveDir="{Binding MoveID}" HorizontalAlignment="Center" Height="150" Margin="0,0,0,0" VerticalAlignment="Center" Width="150"/>
                        </Grid>
                    </Border>
                    <Border CornerRadius="10,10,10,10" Background="#FF303036" Padding="5" Width="148" Height="190" Margin="630,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <DockPanel LastChildFill="True" Height="178" Width="148" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Height="24">
                                <Slider Minimum="0" Maximum="100" Width="92" HorizontalAlignment="Left" Height="17" Margin="10,0,0,5" VerticalAlignment="Center" Value="{Binding LedLightness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <Label Width="24" Height="24" HorizontalContentAlignment="Center" Background="{x:Null}" Margin="9,-6,0,0" Padding="0" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Center" VerticalContentAlignment="Center">
                                    <Label.Content>
                                        <MultiBinding Converter="{StaticResource LEDLightnessConverter}">
                                            <Binding Path="IsLight"/>
                                            <Binding Path="LedLightness"/>
                                        </MultiBinding>
                                    </Label.Content>
                                </Label>
                            </StackPanel>
                            <Button x:Name="LEDButton" Width="130" Height="23" Margin="0,0,0,9" FontWeight="Bold" FontSize="12.5" HorizontalAlignment="Center" DockPanel.Dock="Bottom" VerticalAlignment="Center" Content="{Binding IsLight, Converter={StaticResource LEDButtonConverter}}" Command="{Binding LightCommand}">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="StreamButton" Width="130" Height="23" Margin="0,0,0,8"  FontWeight="Bold" FontSize="12.5" HorizontalAlignment="Center" DockPanel.Dock="Bottom" VerticalAlignment="Center" Content="{Binding IsStream, Converter={StaticResource StreamButtonConverter}}" Command="{Binding StreamCommand }">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <StackPanel HorizontalAlignment="Left" Orientation="Vertical" Width="52" VerticalAlignment="Top" Height="85">
                                <Label Content="Feed 1" Height="17" Margin="0,5,0,0" Width="40" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                                <Label Content="Feed 2" HorizontalAlignment="Center" Height="17" Margin="0,10,0,0" Width="40" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                                <Label Content="Feed 3" Height="17" Margin="0,10,0,0" Width="40" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right" Orientation="Vertical" Width="90" DockPanel.Dock="Right" Height="85" VerticalAlignment="Top">
                                <Border CornerRadius="10" Height="22" Width="80" Background="#FFE8E8E8" HorizontalAlignment="Left" Margin="0,5,0,0">
                                    <ComboBox x:Name="Feed1_ComboBox" SelectedIndex="{Binding Index1, Mode=TwoWay}" ItemsSource="{Binding Feed_Comb}"  Height="20" Margin="0" Background="{x:Null}" Foreground="Black" Padding="0" BorderThickness="0" Width="70" BorderBrush="{x:Null}" ClipToBounds="True" SnapsToDevicePixels="True" FontWeight="Bold"/>
                                </Border>
                                <Border CornerRadius="10" Height="22" Width="80" Background="#FFE8E8E8" Margin="0,5,0,0" HorizontalAlignment="Left">
                                    <ComboBox x:Name="Feed2_ComboBox" SelectedIndex="{Binding Index2, Mode=TwoWay}" ItemsSource="{Binding Feed_Comb}"  Height="20" Margin="0" Background="{x:Null}" Foreground="Black" Padding="0" BorderThickness="0" Width="70" BorderBrush="{x:Null}" ClipToBounds="True" SnapsToDevicePixels="True" FontWeight="Bold"/>
                                </Border>
                                <Border CornerRadius="10" Height="22" Width="80" Background="#FFE8E8E8" Margin="0,5,0,0" HorizontalAlignment="Left">
                                    <ComboBox x:Name="Feed3_ComboBox" SelectedIndex="{Binding Index3, Mode=TwoWay}" ItemsSource="{Binding Feed_Comb}"  Height="20" Margin="0" Background="{x:Null}" Foreground="Black" Padding="0" BorderThickness="0" Width="70" BorderBrush="{x:Null}" ClipToBounds="True" SnapsToDevicePixels="True" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                        </DockPanel>
                    </Border>
                    <Label Content="Feed 2" Height="30" Margin="10,10,1309,0" Width="66" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    <Label Content="Feed 1" Height="30" Margin="10,210,1309,0" Width="66" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

                    <Border CornerRadius="10,10,10,10" Background="#FF303036" Padding="5" Margin="1150,210,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="170">
                        <Grid>
                            
                        </Grid>
                    </Border>
                    <Border CornerRadius="10,10,10,10" Background="#FF303036" Padding="5" Margin="788,390,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="562" Height="200">
                        <StackPanel Orientation="Horizontal" Width="552" Height="190">

                            <TextBox Text="{Binding StatusText, Mode=OneWay}" 
         IsReadOnly="True"
         VerticalScrollBarVisibility="Auto"
         HorizontalScrollBarVisibility="Auto"
         TextWrapping="Wrap"
         AcceptsReturn="True"
         FontFamily="Consolas"
         Background="Black" Foreground="White" Width="400" Height="180" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="HeartBeatTextBox" Height="180" Margin="10,0,0,0" TextWrapping="Wrap" Width="140" Foreground="White" FontSize="13" Text="{Binding HeartBeatText, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right" VerticalAlignment="Center" Background="Black" FontWeight="Normal"/>
                            <Ellipse x:Name="RedLight" Visibility="{Binding IsEllipseVisible, Converter={StaticResource BoolToVisibilityConverter}}" Width="14" Height="14" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="#FF10FF05" StrokeThickness="6" Margin="-22,16,0,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#FF10FF05"
                                  BlurRadius="5"
                                  ShadowDepth="0"
                                  Opacity="1"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </StackPanel>
                    </Border>
                    <View:PowerButton HorizontalAlignment="Left" Height="60" Margin="1290,600,0,0" VerticalAlignment="Top" Width="60" PowerState="{Binding IsPower, Mode=OneWay}" PowerCommand= "{Binding PowerCommand}" />
                    <View:ConnectButton HorizontalAlignment="Left" Margin="1205,600,0,0" VerticalAlignment="Top" ConnectState="{Binding IsConnect, Mode=OneWay}" ConnectCommand= "{Binding ConnectCommand}"/>
                    <View:EnableButton HorizontalAlignment="Left" Margin="1115,600,0,0" VerticalAlignment="Top" Width="60" Height="60" EnableState="{Binding IsEnable, Mode=OneWay}" EnableCommand= "{Binding EnableCommand}"/>
                    <View:SettingsButton HorizontalAlignment="Left" Margin="1018,600,0,0" VerticalAlignment="Top" Width="60" Height="60" SettingsCommand= "{Binding SettingsCommand}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Environment" FontWeight="Bold">
                <Grid Background="#FF25282D" Margin="0,0,0,0">
                    <Border CornerRadius="10" Width="910" Height="550" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,20,0,0" Background="#FF303036">
                        <Grid>
                            <View:ROV3DModel x:Name="ROV3D" MoveDir="{Binding MoveID}" AddMark="{Binding AddMark}"  HorizontalAlignment="Center" Height="550" VerticalAlignment="Center" Width="910"/>
                        </Grid>
                    </Border>
                    <GroupBox HorizontalAlignment="Left" Height="150" Header="Pool Size" Margin="10,10,0,0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="2" Foreground="White">
                        <Grid>
                            <DockPanel Width="170" HorizontalAlignment="Left" VerticalAlignment="Top" Height="130">
                                <StackPanel Width="60" Height="110" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Label Content="Width" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="Length" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="Hight" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="Grid Size" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                </StackPanel>
                                <StackPanel Width="105" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <TextBox Text="{Binding ElementName=ROV3D, Path=Pool_width, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource FloatConverter}}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                                    <TextBox Text="{Binding ElementName=ROV3D, Path=Pool_length, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource FloatConverter}}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                                    <TextBox Text="{Binding ElementName=ROV3D, Path=Pool_height, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource FloatConverter}}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                                    <TextBox Text="{Binding ElementName=ROV3D, Path=GridSize, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource FloatConverter}}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                                </StackPanel>
                            </DockPanel>
                            <Button  HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="20" Grid.Row="0" Content="Set" Command="{Binding ElementName=ROV3D, Path=Run}" Margin="0,0,0,5">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </GroupBox>
                    <GroupBox HorizontalAlignment="Right" Height="150" Header="Position" Margin="0,10,30,0" VerticalAlignment="Top" Width="230" Grid.ColumnSpan="2" Foreground="White">
                        <Grid>
                            <DockPanel Width="219" HorizontalAlignment="Left" VerticalAlignment="Top" Height="130">
                                <StackPanel Width="60" Height="130" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Label Content="X-Axis" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="60" FontSize="12" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="Y-Axis" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="60" FontSize="12" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="Z-Axis" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="60" FontSize="12" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="Yaw" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="60" FontSize="12" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="Heading" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="60" FontSize="12" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                </StackPanel>
                                <StackPanel Width="105" HorizontalAlignment="Right" VerticalAlignment="Top" Height="130">
                                    <Label Content="{Binding ElementName=ROV3D, Path=Position.X}" Height="22" VerticalAlignment="Top" Width="60" FontSize="12" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="{Binding ElementName=ROV3D, Path=Position.Y}" Height="22" VerticalAlignment="Top" Width="60" FontSize="12" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="{Binding ElementName=ROV3D, Path=Position.Z}" Height="22" VerticalAlignment="Top" Width="60" FontSize="12" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="{Binding ElementName=ROV3D, Path=Yaw}" Height="22" VerticalAlignment="Top" Width="60" FontSize="12" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="0" Height="22" VerticalAlignment="Top" Width="60" FontSize="12" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>

                                </StackPanel>
                            </DockPanel>



                        </Grid>
                    </GroupBox>
                    <GroupBox HorizontalAlignment="Left" Height="150" Header="Move To" Margin="10,160,0,0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="2" Foreground="White">
                        <Grid>
                            <DockPanel Width="170" HorizontalAlignment="Left" VerticalAlignment="Top" Height="170">
                                <StackPanel Width="60" Height="110" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Label Content="X-Axis" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="Y-Axis" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="Z-Axis" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                    <Label Content="Speed" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="60" FontSize="9" Margin="0,2,0,0" FontFamily="Arial" Foreground="White"/>
                                </StackPanel>
                                <StackPanel Width="105" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <TextBox Text="{Binding ElementName=ROV3D, Path=X_Axis, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource FloatConverter}}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                                    <TextBox Text="{Binding ElementName=ROV3D, Path=Y_Axis, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource FloatConverter}}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                                    <TextBox Text="{Binding ElementName=ROV3D, Path=Z_Axis, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource FloatConverter}}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                                    <TextBox Text="{Binding ElementName=ROV3D, Path=Speed, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource FloatConverter}}" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0" TextAlignment="Center"></TextBox>
                                </StackPanel>
                            </DockPanel>
                            <Button  HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="20" Grid.Row="0" Content="Move" Command="{Binding ElementName=ROV3D, Path=Add}" Margin="0,0,0,5">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </GroupBox>
                    <GroupBox HorizontalAlignment="Left" Height="150" Header="Track" Margin="10,310,0,0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="2" Foreground="White">
                        <Grid>
                            <DockPanel Width="170" HorizontalAlignment="Left" VerticalAlignment="Top" Height="170">
