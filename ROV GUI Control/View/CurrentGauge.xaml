<UserControl x:Class="ROV_GUI_Control.View.CurrentGauge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ROV_GUI_Control.View"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" Width="200" Height="200">
    <Grid Width="200" Height="200">
        <Path x:Name="RotateL" Stroke="White" StrokeThickness="1" RenderTransformOrigin="0.5,0.5">
            <Path.Effect>
                <DropShadowEffect Color="#FF16E2DE" BlurRadius="5" ShadowDepth="0" Opacity="1"/>
            </Path.Effect>
            <Path.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF16E2DE" Offset="0"/>
                    <GradientStop Color="#FF14A3EB" Offset="0.761"/>
                </LinearGradientBrush>
            </Path.Fill>
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="200,0">
                        <ArcSegment Point="0,200" Size="200,200" RotationAngle="1" IsLargeArc="False" IsSmoothJoin="False"/>
                        <PolyLineSegment Points="200,200"></PolyLineSegment>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>

    </Grid>
</UserControl>
